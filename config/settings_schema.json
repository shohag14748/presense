[
  {
    "name": "theme_info",
    "theme_name": "Launch",
    "theme_author": "Pixel Union",
    "theme_version": "7.1.0",
    "theme_documentation_url": "https://support.pixelunion.net/hc/en-us/sections/360003950513-Launch",
    "theme_support_url": "https://support.pixelunion.net/hc/en-us/requests/new"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Theme colors"
      },
      {
        "type": "color",
        "id": "theme-primary-color",
        "label": "Primary content"
      },
      {
        "type": "color",
        "id": "theme-secondary-color",
        "label": "Secondary content"
      },
      {
        "type": "color",
        "id": "heading-text-color",
        "label": "Headings"
      },
      {
        "type": "color",
        "id": "body-text-color",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "border-color",
        "label": "Borders"
      },
      {
        "type": "color",
        "id": "body-background-color",
        "label": "Background"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body text",
        "default": "helvetica_n3"
      },
      {
        "type": "font_picker",
        "id": "font_headings",
        "label": "Headings",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "font_buttons",
        "label": "Button text",
        "default": "helvetica_n7"
      }
    ]
  },
  {
    "name": "Product form",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_spb",
        "label": "Show dynamic checkout button",
        "info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_cart_redirect",
        "label": "Enable cart redirection",
        "info": "Automatically sends users to the Cart page after adding a product.",
        "default": false
      }
    ]
  },
  {
    "name": "Product goal",
    "settings": [
      {
        "type": "product",
        "id": "featured-product-main",
        "label": "Product",
        "info": "Choose the product that will be used for the Product Goal section"
      },
      {
        "type": "checkbox",
        "id": "product-sale-goal-use",
        "label": "Enable",
        "default": false
      },
      {
        "type": "select",
        "id": "product-sale-goal-style",
        "label": "Background style",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "light",
            "label": "Light"
          },
          {
            "value": "color",
            "label": "Color"
          },
          {
            "value": "gradient",
            "label": "Gradient"
          }
        ],
        "default": "gradient"
      },
      {
        "type": "text",
        "id": "product_sale_goal_button",
        "label": "Button text",
        "info": "This text will change the button text for all dynamic product goal sections.",
        "default": "Pre-order"
      },
      {
        "type": "text",
        "id": "product_sale_goal_estimated_delivery_date",
        "label": "Estimated delivery text",
        "info": "Write a message to let your customers know when they should expect a delivery.",
        "default": "Estimated delivery: April"
      },
      {
        "type": "header",
        "content": "Inventory"
      },
      {
        "type": "text",
        "id": "product_goal_starting_quantity",
        "label": "Starting quantity",
        "info": "To start your goal's progress at 0%, enter a number equal to your Featured product's current inventory.  If you have already made pre-sales, enter a number higher than your Featured product's inventory to account for the progress you've made."
      },
      {
        "type": "text",
        "id": "product_goal",
        "label": "Goal quantity",
        "info": "This value represents the number of sales/pre-orders you'd like to make before funding is completed."
      },
      {
        "type": "checkbox",
        "id": "product_goal_use_quantity",
        "label": "Show product goal as quantity",
        "info": "This option will change the product goal to show units sold instead of money raised.",
        "default": false
      },
      {
        "type": "header",
        "content": "Goal End"
      },
      {
        "type": "text",
        "id": "product_sale_goal_date_time",
        "label": "End date and time",
        "info": "The mm/dd/yyyy hh:mm format is required. For example, June 21st 2022 at 3pm would be 06/21/2022 15:00",
        "default": "06/21/2022 15:00"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_url",
        "label": "Facebook",
        "info": "https://www.facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_twitter_url",
        "label": "Twitter",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "social_pinterest_url",
        "label": "Pinterest",
        "info": "https://www.pinterest.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_url",
        "label": "Instagram",
        "info": "https://instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_vimeo_url",
        "label": "Vimeo",
        "info": "https://vimeo.com/shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_url",
        "label": "YouTube",
        "info": "https://www.youtube.com/user/shopify"
      },
      {
        "type": "text",
        "id": "social_rss_url",
        "label": "RSS",
        "info": "http:\/\/your-store.myshopify.com\/blogs\/news.atom (Your shop's blog's RSS is already available from the blog page)"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "32 x 32px .png required"
      }
    ]
  }
]
