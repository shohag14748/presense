<div class="ticker-wrap">
<div class="ticker {% if section.settings.img_ticker %}image{% endif %}">
  {% if section.settings.img_ticker %}
  {% for block in section.blocks %}
  	<div class="ticker__item">
  	{% if block.settings.svg_image != blank %}
      <img class="lazyload js" src="{{ block.settings.svg_image }}"
           data-src="{{ block.settings.svg_image }}">
      {% endif %}
  	</div>
  {% endfor %}
  {% for block in section.blocks %}
  	<div class="ticker__item">
  	{% if block.settings.svg_image != blank %}
      <img class="lazyload js" src="{{ block.settings.svg_image }}"
           data-src="{{ block.settings.svg_image }}">
      {% endif %}
  	</div>
  {% endfor %}
  {% else %}
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
    <div class="ticker__item">{% if section.settings.ticker_text != blank %}{{section.settings.ticker_text}}{% endif %}</div>
  {% endif %}
</div>
</div>
{% schema %}
  {
    "name": "ticker",
    "settings": [
		 {
            "type": "textarea",
            "id": "ticker_text",
            "label": "Ticker Text"
		},
		{
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#fff"
        },
		{
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#f5f1ed"
        },
        {
            "type": "text",
            "id": "bar_height",
            "label": "padding"
        },
		{
            "type": "text",
            "id": "font_size",
            "label": "Font Size (px)",
            "default": "20"
        },
		{
            "type": "text",
            "id": "font_size_m",
            "label": "Font Size mobile (px)",
            "default": "20"
        },
        {
            "type": "text",
            "id": "animation_time",
            "label": "Animation Speed (s)",
            "default": "10"
        },	  
	  	{
		  "type":"checkbox",
		  "id":"img_ticker",
		  "label":"Enable image ticker?",
		  "default": false,
		  "info":"add block for image"
	    }
	],
	"blocks": [
      {
        "type": "image",
        "name": "Image slide",
        "settings": [
          {
            "type": "text",
            "id": "svg_image",
            "label": "SVG Image Link"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Slide link"
          },
		  {
            "type": "checkbox",
            "id": "newTab",
            "label": "Open in new Tab?",
			"info":"On click link open in new window"
          }
        ]
      }
    ],
    "presets": [
        {
          "name": "ticker",
          "category": "Custom"
        }
	]
  }
{% endschema %}

<style>
.ticker-wrap{
	max-width: 100%;
  overflow: hidden;
  background-color: {{section.settings.bg_color}};
}

.ticker {
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  padding: {{section.settings.bar_height}}px;
  animation: marquee {{section.settings.animation_time}}s linear infinite;
}

.ticker .ticker__item {
  display: inline-block;
  padding: 0;
  font-size: {{section.settings.font_size}}px;
  color: {{section.settings.text_color}};
  font-weight: 500;
  line-height:1.45;
}
.ticker .ticker__item span{
padding:0 20px;
}
  .ticker.image{
   padding: 10px;
    line-height: 5.8rem !important;
  }
  .ticker.image .ticker__item img{
    height: 50px;
    max-width: 150px;
  }
@media (max-width:720px){
.ticker .ticker__item {
  font-size: {{section.settings.font_size_m}}px;
}

}

@keyframes marquee {
  0% {
    transform: translate3d(0, 0, 0);
  }
  100% {
    transform: translate3d(-50%, 0, 0);
  }
</style>

