<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-testimonials"
></script>

  <div class="module-wrapper style-{{ section.settings.style }} border">
    <div class="swiper bg-slider swiper-container-bg-{{ section.id }}">
        <div class="swiper-wrapper">
          {%- for i in (1..9) -%}
            {%- assign image_index = 'image-' | append: i -%}
            {% if section.settings[image_index] != blank %}
              <div class="swiper-slide">
              <div class="reviwe-image">
                {%
                  render 'rimg',
                  img: section.settings[image_index],
                  size: '1440x1412',
                  lazy: false,
                  crop: false
                %}
              </div>
              </div>
            {% endif %}
          {%- endfor -%}
        </div>
    </div>
            
    
<div class="container">   
<div class="wraper">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="module-header">
        {% if section.settings.subtitle != blank %}
          <p class="module-subtitle">
            {{ section.settings.subtitle | escape }}
          </p>
        {% endif %}
        {% if section.settings.title != blank %}
          <h3 class="module-title dynamic-testimonials-title">
            {{ section.settings.title | escape }}
          </h3>
        {% endif %}
        {% if section.settings.review_count != blank %}
          <h6 class="module-review-count">
            <img src="https://cdn.shopify.com/s/files/1/0618/6015/1453/files/5-star.png?v=1659767163"/>
            {{ section.settings.review_count }}
          </h6>
        {% endif %}
      </div>
    {% endif %}

    <!-- Slider main container -->
<div class="sp-wrap">
    <div class="swiper swiper-container-{{ section.id }}">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="dynamic-testimonials-slides-list-item-container">
                  <div class="dynamic-testimonials-slides-list-item-body">
                    <div class="dynamic-testimonial-quote">
                      {{ block.settings.quote }}
                    </div>
                    <img src="https://cdn.shopify.com/s/files/1/0618/6015/1453/files/5-star.png?v=1659767163"/>
                  </div>
                </div>
              </div>
              {% endfor %}
        </div>
      </div>
      <!-- If we need navigation buttons -->
      <div class="swiper-btn-prev swiper-btn btn-prev-{{ section.id }}"><span class="icon icon-angle-left"></span></div>
      <div class="swiper-btn-next swiper-btn btn-next-{{ section.id }}"><span class="icon icon-angle-right"></span></div>
  </div>
</div>   

{% if section.settings.btn != blank %}
  <a class="dynamic-button button outline" href="{{ section.settings.btn_link }}">
    {{ section.settings.btn }}  <span class="icon icon-angle-right"></span>
  </a>
{% endif %}

</div>
</div>
<script>
new Swiper('.swiper-container-{{ section.id }}', {
    loop: true,
    navigation: {
      nextEl: ".btn-next-{{ section.id }}",
      prevEl: ".btn-prev-{{ section.id }}",
    },
    slidesPerView: 1,
    paginationClickable: true,
    spaceBetween: 20,
});
  new Swiper('.swiper-container-bg-{{ section.id }}', {
    loop: true,
    slidesPerView: 1,
    effect: 'fade',
    autoplay: {
     delay: 4000,
   },
});
</script>

