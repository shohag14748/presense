<div class="
    module-wrapper
    {% if template == 'page.about' %}
      about-content
    {% elsif template == 'page.faq' %}
      faq-content
    {% endif %}
  "
>
  <div class="module page {% if page.content == blank %}no-content{% endif %}">
    <div class="module-header page-header">
      <div class="module-title">
        <h1>{{ page.title }}</h1>
      </div>
    </div>
    {% unless page.content == blank %}
      <div class="module-body page-body rte clearfix">
        {{ page.content }}
      </div>
    {% endunless %}
  </div>
</div>

{% schema %}
{
  "name": "Static page"
}

{% endschema %}