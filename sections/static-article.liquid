{% if article.image %}
  <div class="module-wrapper">
    
    {% if article.tags.size > 0 %}
      <span class="tags">
        {% for tag in article.tags %}
          <span class="tag {{ tag | downcase }}">{{ tag }}</span>
        {% endfor %}
      </span>
    {% endif %}
  
    <div class="module column-1 full-width article-intro">
      <div class="module-body clearfix">
        <div
          class="image-container article-intro-image-container"
          {%
            render 'rimg',
            background: true,
            img: article.image,
            size: '2048x2048',
            lazy: true
          %}
        >
          {%
            render 'rimg',
            class: 'article-intro-image',
            img: article.image,
            size: '2048x2048',
            lazy: true
          %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

<div class="module-wrapper">
  <div class="module article">
    <div class="module-body clearfix">
      <div class="post-wrapper">
        {% render 'article-list-item', article: article %}
      </div>
    </div>
  </div>
</div>
{% assign title-blog = article.title %}

<div class="module-wrapper style-1 border blog-posts blog-posts-want">
  {% if blog.articles.size > 0 %}
  <div class="module dynamic-blog">
    <div class="module-header dynamic-blog-header">
      <h3 class="module-title dynamic-blog-title">
        More posts we think youâ€™ll love...
      </h3>
    </div>
    <div class="module-body dynamic-blog-body">
      <div class="list column-2 clearfix">
          {% assign count = 0 %}
          {% for article in blog.articles limit: section.settings.posts-to-show %}
            {% if title-blog != article.title and count < 2 %}
              {{ count }}
               {% assign count = count | plus: 1 %}
            {% assign has_image = false %}
            {% assign image = false %}
            {% assign image_alt = article.title | strip_html | escape %}
            {% assign background_image = false %}
            {% assign image_size = '480x' %}

            {% if section.settings.posts-to-show == "2" %}
              {% assign image_size = '600x' %}
            {% endif %}

            <div class="list-item list-item-inline">
              <a class="list-container" href="{{ article.url }}">
                {% if article.image %}
                  <div class="list-image-wrapper">
                  {% if article.tags.size > 0 %}
                    {% for tag in article.tags %}
                      {% if forloop.first %}
                        <span class="tags"><span class="tag {{ tag | downcase }}">{{ tag }}</span></span>
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                    <div
                      class="list-cover"
                    >
                      {%
                        render 'rimg',
                        class: 'list-image',
                        img: article.image,
                        size: image_size,
                        crop: 'center',
                        lazy: true,
                      %}
                    </div>
                  </div>
                {% endif %}
                  <div class="list-text-wrapper">
                    <div class="list-title">
                      {{ article.title }}
