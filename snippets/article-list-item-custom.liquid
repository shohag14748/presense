<div class="list-item list-item-inline">
  <a class="list-container" href="{{ article.url }}">
    {% if article.image %}
      <div class="list-image-wrapper">
      {% if article.tags.size > 0 %}
        {% for tag in article.tags %}
          {% if forloop.first %}
            <span class="tags" data-tag={{ tag | downcase }}><span class="tag {{ tag | downcase }}">{{ tag }}</span></span>
          {% endif %}
        {% endfor %}
      {% endif %}

        <div
          class="list-cover"
        >
          {% comment %}
          {%
            render 'rimg',
            class: 'list-image',
            img: article.image,
            size: image_size,
            crop: 'center',
            lazy: true,
          %}
          {% endcomment %}
          <img src="{{ article.image | img_url: '600x' }}" />
        </div>
      </div>
    {% endif %}
    <div class="list-text-wrapper">
      <div class="list-title">
        {{ article.title }}
      </div>
      <div class="author">
        <div class="author-image">
